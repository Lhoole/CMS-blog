<div class="text-center card">
  <div class="card-header">
  <h2>{{post_title}}</h2>
  <p class="card-subtitle">Posted by {{user.username}} on {{format_date date_created}}</p>
  </div>
  <p>{{post_text}}</p>
</div>

{{#each comments as |comment| }}
<div class="row mb-4 comment card">
  <div class="col-md-12 card-header">
    <p>{{user.username}} : {{format_date comment.date_created}}</p>
  </div>
  <div class="col-md-12">
    <p>
      {{comment.comment_text}}
    </p>
  </div>
</div>
{{/each}}

<div class="row mt-4">
  <div class="col-md-6 card">
    <h4>Add comment:</h4>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment_text">Post content:</label>
        <textarea class="form-input" id="comment_text" name="comment_text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="cmntbtn" value="{{id}}">Comment</button>
      </div>
    </form>
  </div>
  <script src="../js/comment.js"></script>
