<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

  {{#if blogposts.length}}
  <div class="col-md-6 blogpost-list">
    <h3>Current Projects:</h3>

    {{#each blogposts as |blogpost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogpost/{{blogpost.id}}">{{blogpost.post_title}}</a></h4>
      </div>
      <div class="col-md-2">
        <button class="btn btn-sm btn-danger"><a href="/edit/{{blogpost.id}}">Edit</a></button>
      </div>
      <div class="col-md-2">
        <button class="btn btn-sm btn-danger" data-id="{{blogpost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  <a class="btn btn-primary" href="/newpost">Create new post</a>
</div>

<script src="./js/profile.js"></script>
