<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit your blogpost:</h3>

    <form class="form new-blogpost-form">
      <div class="form-group">
        <label for="blogpost-name">Blogpost title:</label>
        <input class="form-input" type="text" id="blogpost-name" name="blogpost-name" value="{{post_title}}" />
      </div>
      <div class="form-group">
        <label for="blogpost-desc">Post content:</label>
        <textarea class="form-input" id="blogpost-desc" name="blogpost-desc">{{post_text}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="confirmbtn" value="{{id}}">Confirm</button>
      </div>
    </form>
  </div>
  <script src="../js/postedit.js"></script>