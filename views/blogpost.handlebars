<div class="text-center">
  <h2>{{post_title}}</h2>
  <p>{{post_text}}</p>
  <p>Posted by {{user.username}} on {{format_date date_created}}</p>

  <p>
    <button class="btn btn-primary"><a href="/comment/{{id}}">Comment</a></button>
  </p>
</div>

{{#each comments as |comment| }}
<div class="row mb-4 comment">
  <div class="col-md-5">
    <p>{{user.username}} : {{format_date comment.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.comment_text}}
    </p>
  </div>
</div>
{{/each}}
